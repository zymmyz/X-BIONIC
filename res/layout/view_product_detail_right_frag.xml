<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/productmoreviewbackground"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_linear_frg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/usercomment_select" />

        <Button
            android:id="@+id/btn_product_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/productnews_nomal" />

        <Button
            android:id="@+id/btn_award_winning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/awardwinning_nomal" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_product_detail_right_fra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/gray"
        android:divider="@drawable/dottedline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharebuybackground"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_shopping_cart"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_shopping_cart"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_colloct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_shopping_cart"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>